# Use strict SSL to ensure security
strict-ssl=true

# Enable full optimization in production builds
production=true

# Skip optional dependencies to speed up installation
omit=optional

# Use the latest version of npm
engine-strict=true

# Optimize network performance
fetch-retries=5
fetch-retry-factor=2
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Use the fastest network mirror
registry=https://registry.npmjs.org/

# Cache optimizations
prefer-offline=true 